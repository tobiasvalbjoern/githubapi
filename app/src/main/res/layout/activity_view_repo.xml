<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="dk.e5pme.githupapi.viewRepo" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/description"/>
    <TextView
            android:text="description"
            android:layout_width="349dp"
            android:layout_height="156dp"
            android:id="@+id/description"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.421" android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star_descr"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description"/>
    <TextView
            android:text="Star count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/stars"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/star_descr" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/date_descr"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="112dp"/>
    <TextView
            android:text="date"
            android:layout_width="113dp"
            android:layout_height="53dp"
            android:id="@+id/date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/date_descr"/>
    <Button
            android:text="Open in Github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repoBtn"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="161dp"
            android:layout_height="173dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/avatar_url"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/date" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/description"/>


</android.support.constraint.ConstraintLayout>
